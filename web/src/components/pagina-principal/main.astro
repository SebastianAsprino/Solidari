---
import LogoMainPage from '../../assets/LogoMainPage.astro';
import LogoMainCelular from '../../assets/LogoMainCelular.astro'
import s from './styles';
---
<main  class={s.main}>
	<section class={s.SectionIzquierdo}>
		<LogoMainPage  className={s.svg}/>
		<h1 class={s.SectionIzquierdoH1}>
			BIENVENIDO <br> AL FUTURO.
		</h1>
		<p class={s.SectionIzquierdoP}  >
			Créditos 100% digitales, rápidos y sin complicaciones
		</p>
		<a href="/solicitud" class={s.SectionIzquierdoA} aria-label="Ir a página de la solicitud">
			Empezar 
		</a>
	</section>
	<section class={s.SectionDerecho}>
		<LogoMainCelular/>
	</section>
</main>